<% content_for :body_content_title do %>
  <%= @job.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @job.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @job.description %>
    </p>
  </section>
  <section>
    <h1>Completed On</h1>
    <p>
      <%=raw @job.completed_on %>
    </p>
  </section>
  <section>
    <h1>Photo 1</h1>
    <p>
      <%= image_fu @job.photo_1, nil %>
    </p>
  </section>
  <section>
    <h1>Photo 2</h1>
    <p>
      <%= image_fu @job.photo_2, nil %>
    </p>
  </section>
  <section>
    <h1>Photo 3</h1>
    <p>
      <%= image_fu @job.photo_3, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="jobs">
      <% @jobs.each do |job| %>
        <li>
          <%= link_to job.name, refinery.jobs_job_path(job) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
