<section id="body_content">
  <section id="body">
    <div id="job">
      <div class="row">
        <div class="col-md-4 jobimages">
          <div class="jobimages">
            <%= image_fu @job.photo_1, "400x400", class: "img-responsive img-rounded" %>
          </div>
          <div class="jobimages">
            <%= image_fu @job.photo_2, "400x400", class: "img-responsive img-rounded" %>
          </div>
          <div class="jobimages">
            <%= image_fu @job.photo_3, "400x400", class: "img-responsive img-rounded" %>
          </div>
        </div>
        <div class="col-md-8 jobtext">
          <div class="row description">
            <h1><%= @job.name.capitalize %></h1>
            <h4>
              <b>Completed On:</b> <%= @job.completed_on %>
            </h4>
          </div>
          <div class="row description">
            <%= raw @job.description %>
          </div>
          <div class="row">
            <p class="back"><%= link_to "Back to Jobs", refinery.jobs_jobs_path %></p>
          </div>
        </div>
      </div>
    </div>
  </section>
</section>
