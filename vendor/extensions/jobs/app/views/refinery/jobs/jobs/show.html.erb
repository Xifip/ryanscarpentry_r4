<section id="body_content">
  <section id="body">
    <div id="job">
      <div class="row">
        <div class="col-md-7">
          <div id="carousel-job" class="carousel slide" >
            <!-- Indicators -->
            <ol class="carousel-indicators hidden-xs">
              <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
              <li data-target="#carousel-example-generic" data-slide-to="1"></li>
              <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
              <div class="item">
                <%= image_fu @job.photo_1, "700x300", class: "img-responsive img-rounded", :alt => @job.photo_1.alt, :title => @job.photo_1.title %>
              </div>
             <div class="item">
                <%= image_fu @job.photo_2, "700x300", class: "img-responsive img-rounded", :alt => @job.photo_2.alt, :title => @job.photo_2.title %>
              </div>
             <div class="item">
                <%= image_fu @job.photo_3, "700x300", class: "img-responsive img-rounded", :alt => @job.photo_3.alt, :title => @job.photo_3.title %>
              </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
               <span class="control-left">
                    <i class="fa fa-angle-left fa-stack-2x"></i>
                </span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
              <span class="control-right" >
                <i class="fa fa-angle-right fa-stack-2x" aria-hidden="true"></i>
              </span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        <div class="col-md-5 jobtext">
          <h3><%= @job.name.capitalize %></h3>
          <h4>
            <b>Completed On:</b> <%= @job.completed_on %>
          </h4>
          <p>
            <%= raw @job.description %>
          </p>
          <p class="back"><%= link_to "Back to Jobs", refinery.jobs_jobs_path %></p>
        </div>
        <!-- Related Projects Row -->
        <div class="row">
          <div class="col-lg-12">
              <h3 class="page-header">Related Projects</h3>
          </div>
          <% @jobs.each do |job| %>
            <div class="col-sm-3 col-xs-6">
                <a href=refinery.jobs_job_url(job)>
                    <%= image_fu job.photo_1, "270x200", class: "mg-responsive img-hover img-related", :alt => job.photo_1.alt %>
                </a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</section>
