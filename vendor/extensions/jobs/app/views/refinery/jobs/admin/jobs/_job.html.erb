<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(job) -%>">
  <span class='title'>
    <%= job.name %>

    <% if Refinery::I18n.frontend_locales.many? %>
      <span class='preview'>
        <% job.translations.each do |translation| %>
          <% if translation.name.present? %>
            <%= link_to refinery_icon_tag("flags/#{translation.locale}.png", :size => '16x11'),
                         refinery.edit_jobs_admin_job_path(job, :switch_locale => translation.locale),
                         :class => 'locale' %>
          <% end %>
        <% end %>
      </span>
    <% end %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.jobs_job_path(job), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_jobs_admin_job_path(job), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.jobs_admin_job_path(job), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: job.name)}}  ) %>
  </span>
</li>
