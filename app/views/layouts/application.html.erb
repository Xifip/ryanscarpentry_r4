<!DOCTYPE html>
<%= render "/refinery/html_tag" %>
  <% site_bar = render('/refinery/site_bar', :head => true) -%>
  <head>
    <%= render "/refinery/javascripts" %>
    <%= render "/refinery/head" %>
  </head>
  <% if controller.controller_name == "inquiries" %>
    <body id="<%= canonical_id @page %>" data-no-turbolink="true">
  <% else %>
   <body id="<%= canonical_id @page %>" data-no-turbolink="false">
  <% end %>
    <%= site_bar -%>
    <div id="page_container">
      <header id="header">
        <%= render "/refinery/header" -%>
      </header>
      <section id="page" class="container">
        <%= yield %>
      </section>
      <footer>
        <%= render "/refinery/footer" -%>
      </footer>
    </div>

  </body>
</html>
